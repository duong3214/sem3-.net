@model ComicSystem.Models.ComicBook

@{
    ViewData["Title"] = "Delete ComicBook";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this comic book?</h4>
<hr />

<div class="form-group">
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Author</dt>
        <dd>@Model.Author</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "ComicBooks")" class="btn btn-secondary">Cancel</a>
</form>
